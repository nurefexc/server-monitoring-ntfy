# ntfy server monitoring configuration

# ntfy topic URL (e.g., https://ntfy.sh/my-secret-topic)
NTFY_URL=https://ntfy.sh/YOUR_TOPIC

# Optional: ntfy authentication token (if topic is protected)
NTFY_TOKEN=

# Identifier of the server in notifications
HOSTNAME=Server-Name

# CPU temperature threshold in Celsius (default: 82)
TEMP_LIMIT=82

# Disk usage threshold in percentage (default: 90)
DISK_LIMIT=90

# Memory usage threshold in percentage (default: 92)
RAM_LIMIT=92

# Daily report time (HH:MM)
DAILY_TIME=08:00

# Check interval in seconds (default: 60)
CHECK_INTERVAL=60
